category'\",\n                                  conditionalPanel(\n                                    condition = \"input.cat == 'brewery'\",\n                                    sliderInput(\"abv1\",\n                                                label = h4(\"Alcohol Percentage:\"),\n                                                min = 0.01,\n                                                max = 57.7,\n                                                value = c(4, 7),\n                                                step = 0.01)),\n                                  conditionalPanel(\n                                    condition = \"input.cat == 'style'\",\n                                    sliderInput(\"abv1\",\n                                                label = h4(\"Alcohol Percentage:\"),\n                                                min = 0.01,\n                                                max = 57.70,\n                                                value = c(4, 7),\n                                                step = 0.01))),\n                                sliderInput(\"n1\",\n                                            label = h4(\"Number of Recommendations:\"),\n                                            min = 0,\n                                            max = 50,\n                                            value = 10,\n                                            step = 5),\n                                sliderInput(\"reviews1\",\n                                            label = h4(\"Min. Number of Reviews:\"),\n                                            min = 50,\n                                            max = 5000,\n                                            value = 50,\n                                            step = 50)\n                              ),\n                              mainPanel(\n                                fluidRow(\n                                  column(10,\n                                 